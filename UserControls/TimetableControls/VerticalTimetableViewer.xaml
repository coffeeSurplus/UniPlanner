<UserControl x:Class="UniPlanner.UserControls.TimetableControls.VerticalTimetableViewer"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" d:DesignHeight="120" d:DesignWidth="150" MouseRightButtonDown="DeleteButtonClick">
	<Button Style="{StaticResource BorderButton}" Click="EditButtonClick">
		<StackPanel x:Name="TextArea" Style="{StaticResource VerticalPanel}">
			<TextBlock Grid.Row="0" x:Name="TitleText" Style="{StaticResource CentreTitle}"/>
			<TextBlock Grid.Row="1" x:Name="SubtitleText" Style="{StaticResource CentreSubtitle}"/>
		</StackPanel>
	</Button>
</UserControl>